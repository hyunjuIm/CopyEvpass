<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_notice">

    <ImageView
        android:id="@+id/imgnotice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ico_notice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textnotice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.16" />

    <TextView
        android:id="@+id/textnotice"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center|bottom"
        android:text="공지사항"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgnotice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>